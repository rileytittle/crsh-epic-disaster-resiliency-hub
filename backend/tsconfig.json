{
	"compilerOptions": {
		/* Language and Environment */
		"target": "ES2022",
		"module": "Node16",
		"moduleResolution": "Node16",
		"outDir": "./dist",
		"rootDir": "./",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": ["./api/*.ts", "./src/**/*.ts"],
	"exclude": ["node_modules", "dist"]
}

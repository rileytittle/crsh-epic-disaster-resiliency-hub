{
	"compilerOptions": {
	  /* Language and Environment */
	  "target": "ES2022",
	  "module": "Node16",
	  "moduleResolution": "Node16",
	  "outDir": "./dist",
	  "rootDir": "./src", 
	  "esModuleInterop": true,
	  "allowSyntheticDefaultImports": true,
	  "forceConsistentCasingInFileNames": true,
	  "strict": true,
	  "skipLibCheck": true
	},
	"include": [
    "src/**/*.ts",  // Include all files under src/
    "api/**/*.ts"   // Include files in api/ outside of src/
  ],
	"exclude": ["node_modules", "dist"] 
  }
  